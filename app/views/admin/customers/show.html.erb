<div class='body'>
  <div class='container'>
    <div class="row content">
    	<h1><%= @customer.name_last %><%= @customer.name_first %>さんの会員詳細</h1>
    <table>
	<tbody>
		<tr>
			<td>顧客ID</td>
			<td><%= @customer.id %></td>
			<td><% if @customer.void_frag == true %>
 				有効
 				<%else%>
 				退会済み
 				<%end%></td>
		</tr>
		<tr>
			<td>氏名</td>
			<td><%= @customer.name_last %><%= @customer.name_first %></td>
		</tr>
		<tr>
			<td>フリガナ</td>
			<td><%= @customer.furigana_last %><%= @customer.furigana_first %></td>
		</tr>
		<tr>
			<td>郵便番号</td>
			<td><%= @customer.post_code %></td>
		</tr>
		<tr>
			<td>住所</td>
			<td><%= @customer.address %></td>
		</tr>
		<tr>
			<td>電話番号</td>
			<td><%= @customer.phone %></td>
		</tr>
		<tr>
			<td>メールアドレス</td>
			<td><%= @customer.email %></td>
		</tr>

	</tbody>
    </table>

<%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-primary" %>
<%= link_to "注文履歴一覧を見る", admin_orders_path(customer_id: @customer.id), class:"btn btn-primary" %>

</div>
</div>
</div>
