<div class='body'>
  <div class='container'>
    <div class="row content">
　　　　　<h1>ジャンル一覧・追加</h1>
　　　　　<%= form_for(@genre, url: admin_genres_path) do |f| %>
 　　　　　　<p> ジャンル<%= f.text_field :name %><%= f.radio_button :void_frag, :有効 %>有効<%= f.radio_button :void_frag, :無効 %>無効
	　　　　　<%= f.submit "追加" %></p>
　　　　　　  
　　　　　<% end %>
　　　<div class="col-xs-6">
  　　<table class="table table-bordered">
        <thead class="thead-lignt">
 		<tr>
 			<th>ジャンル</th>
 			<th>状態</th>
 			<th></th>
 		</tr>
 	　　</thead>
 	　　<tbody>
 		　　<% @genres.each do |genre| %>
 		<tr>
 			<td><%= genre.name %></td>
 			<td><%= genre.void_frag %></td>
 			<td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-primary" %></td>
 		</tr>
 		<% end %>
 	　　</tbody>
 　　</table>
　　</div>
</div>
</div>
</div>
