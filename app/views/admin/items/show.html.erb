<div class='body'>
  <div class='container'>
    <div class="row content">
       <h2>商品詳細</h2>
 
   	  	<div class="col-xs-3">
          <%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg' %><br>
   	  	</div>
   	  	<div class="col-xs-6">
          <table  class="table table-bordered">
            <thead class="thead-lignt">
          <tr><td>商品名</td><td><%= @item.name %></td></tr>
          <tr><td>商品説明</td><td><%= @item.introduction %></td></tr>
          <tr><td>ジャンル</td><td><%= @item.genre.name %></td></tr>
          <tr><td>税抜価格</td><td><%= @item.nontaxed_price %></td></tr>
          <tr><td>販売ステータス</td><td><%= @item.is_active %></td></tr>
        </thead>
   	  	</table>
        </div>
      </div>
       <div class="row content">
       <div  style="text-align:right">
       <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-primary" %>
　　  </div>

   </div>
</div>
