<div class='body'>
  <div class='container'>
    <div class="row content">
        <h1>注文履歴一覧</h1>
	<table class="table table-bordered">
        <thead class="thead-lignt">
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |orders| %>
		<tr>
			<td><%= link_to admin_order_path(orders.id) do %>
				<%= l orders.created_at %>
				<% end %>
			</td>
			<td><%= orders.customer.name_set %></td>
			<td><%= OrderItem.where(order_id: orders.id).sum(:quantity) %></td>
			<td><%= orders.order_status %></td>
		</tr>
		<% end %>
	</tbody>
</table>