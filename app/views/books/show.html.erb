<div class='body'>
  <%if flash[:notice] %>
  <p><%= flash[:notice] %>
    <% end %>
 <div class='container'>
<div class="row content">
<%= render 'shared/sidebar', user: @books.user, book: @books %>

 <div class="col-xs-9">
 <h2>Book detail</h2>
<table class="table">
		  <tbody><tr>

        <td>
          <%= link_to user_path(@books.user.id) do %>
          <%= attachment_image_tag @books.user, :profile_image, :fill, 100, 100, format: 'jpeg' %><br>
        	<%= @books.user.name %>
          <% end %>
      </td>
        <td><%= @books.title %></td>
        <td><%= @books.body %></td>
        <% if @books.user.id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@books.id) %></td>
       <td><%= link_to "Destroy", book_path(@books), method: :delete %></td>
       <<% else %>
     <%end%>
      </tr>

    </tbody></table>

 
 

  </div>
 </div>
 </div>
