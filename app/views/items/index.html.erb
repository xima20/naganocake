<div class='body'>
	<div class='container'>
		<div class="row content">
			<div class="col-xs-3">
     			<%= render 'shared/genre' %>
     		</div>
              <div class="col-xs-9">
               <h2><%= @title %>一覧</h2>
               <% @items.each do |item| %>
               <%= link_to item_path(item.id) do %>
                <div  class="item">
                 <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg' %></br>
                 <%= item.name %></br>
                 ￥<%= item.nontaxed_price %></br>
               

                </div>
                <% end %>
                <% end %>
                </div>
         </div>
    　</div>
</div>








