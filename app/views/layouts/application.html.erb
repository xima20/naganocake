<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>naganoCAKE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>naganoCAKE</title>
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,600,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
  </head>

  <body>
    <header class="navbar navbar-inverse">
      <div class="container">
        <%= link_to root_path do %>
      <h1><font color="white">LOGO</font></h1>
        <% end %>
      <% if customer_signed_in? %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li>
            <font color="white">ようこそ、<%= current_customer.name_first %>さん！</font>
            </li>
          <li>
           <%= link_to "マイページ", customers_path, class: "glyphicon glyphicon-user users" %>
          </li>
          <li>
           <%= link_to "商品一覧", items_path, class: "glyphicon glyphicon-user users" %>
          </li>
          <li>
            <%=link_to "カート", cart_items_path, class: "glyphicon glyphicon-user users" %>
          </li>
         <li>
            <%=link_to "ログアウト", destroy_customer_session_path, method: "delete", class: "glyphicon glyphicon-user users" %>
          </li>

        </ul>
        </nav>
      <% else %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li>
           <%= link_to "商品一覧", items_path, class: "glyphicon glyphicon-home home" %>
          </li>
          <li>
           <%= link_to "新規登録", new_customer_registration_path, class: "glyphicon glyphicon-home home" %>
          </li>
          <li>
           <%= link_to "ログイン", new_customer_session_path, class: "glyphicon glyphicon-home home" %>
          </li>
        </ul>

        </nav>
      <% end %>
    </div>
    </header>




    <%= yield %>
  </body>
</html>
