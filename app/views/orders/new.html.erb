<div class='body'>
  <div class='container'>
    <div class="row content">
       <h1>注文情報入力</h1>
       <label>支払方法</label>
          <%= form_with model: @order, url: {controller: :orders, action: :confirm}, local: true do |f| %>
          <div class="field">
            <%= f.radio_button :pay_method, "クレジットカード" %>クレジットカード</br>
            <%= f.radio_button :pay_method, "銀行振込" %>銀行振込
          </div>
       <label>お届け先</label>
          <div class="field">
 　          <%= f.radio_button :type, "1" %>ご自身の住所<br>
             <div>
 　          <%= current_customer.post_code %><%= current_customer.address %>
 　　　　　　<%= current_customer.name_set %>
             </div>
          </div>
          <div class="field">
 　          <%= f.radio_button :type, "2" %>登録済み選択住所
 　          <%= f.collection_select :address_id, Address.where(customer_id: current_customer), :id, :name_address,
              :prompt =>"--選択してください--" %>
          </div>
          <div class="field">
          </div>
          <div class="col-xs-2"><%= f.radio_button :type, "3" %>新しいお届け先</br>
             <%= f.label :郵便番号 %><br>
              <%= f.label :住所 %><br>
             <%= f.label :宛名 %><br>
           </div>
            <div class="col-xs-9">
               <br>
               <%= f.text_field :new_post_code %><br>
               <%= f.text_field :new_address %><br>
                <%= f.text_field :new_name %>
                
            </div>

            <div class="row content">
              <div class="col-xs-4">
            <div style="text-align:center">
              <%= f.submit "購入を確認する", class: "btn btn-primary" %>
         </div>
         </div>
         </div>
          <% end %>
        </div>
    </div>
  </div>



