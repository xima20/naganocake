<div class='body'>
  <div class='container'>
    <div class="row content">
       <h1>注文履歴詳細</h1>
        <div class="col-xs-4">
          <label>注文情報</label>
          <table class="table table-bordered">
	      <thead class="thead-lignt">
		  <tr>
		      <td>注文日</td>
		      <td><%= @order.created_at %></td>
		  </tr>
		  <tr>
		      <td>配送先</td>
		      <td><%= @order.post_code %><br>
			  <%= @order.address %><br>
			  <%= @order.name %></td>
		  </tr>
		  <tr>
		      <td>支払方法</td>
		      <td><%= @order.pay_method %></td>
		  </tr>
		  <tr>
			  <td>ステータス</td>
			  <td><%= @order.order_status %></td>
		  </tr>
	      </tbody>
          </table>
        </div>
        <div class="col-xs-3">
          <label>請求情報</label>
          <table class="table table-bordered">
	      <thead class="thead-lignt">
		  <tr>
		     <td>商品合計</td>
			 <td><%= @order.amount - @order.postage %></td>
		  </tr>
		  <tr>
		      <td>配送料</td>
			  <td><%= @order.postage %></td>
		  </tr>
		  <tr>
		   	  <td>ご請求額</td>
			  <td><%= @order.amount %></td>
		  </tr>
	      </tbody>
          </table>
        </div>
    </div>
    <div class="row content">
      <div class="col-xs-9">
      <label>注文内容</label>
      <table class="table table-bordered">
	  <thead class="thead-lignt">
		<tr>
			<th>商品</th>
			<th>単価(税込)</th>
			<th>個数</th>
			<th>小計</th>
		</tr>
	  </thead>
	  <tbody>
		<% @order_items.each do |order_items| %>
		<tr>
			<td><%= order_items.item.name %></td>
			<td><%= order_items.price %></td>
			<td><%= order_items.quantity %></td>
			<td><%= order_items.quantity * order_items.price %></td>
		</tr>
		<% end %>
	   </tbody>
       </table>
       </div>
    </div>
  </div>
</div>