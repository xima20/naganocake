

<div class='body'>
 <div class='container'>
<div class="row content">

<%= render 'shared/sidebar', user: current_user, book: @book %>

 <div class="col-xs-9">
 <h2>Users</h2>
<table class='table'>

  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
    
  </thead>
  <% @users.each do |user| %>
  <tr>
  	<th><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg") %></th>
  	<th><%= user.name %></th>


 <th><%= link_to "Show", user_path(user.id) %></th>
</tr>
<% end %>
</table>
 </div>
 
 </div>
 </div>
</div>

