<div class='body'>
 <div class='container'>
  <%if flash[:notice] %>
  <p><%= flash[:notice] %>
    <% end %>
    <%if flash[:alert] %>
  <p><%= flash[:alert] %>
    <% end %>
<div class="row content">
<%= render 'shared/sidebar', user: @user, book: @book %>

 <div class="col-xs-9">
 <h2>Books</h2>
<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
<tr>
  <th><%= attachment_image_tag(book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg") %></th>

  <th><%= link_to book_path(book.id) do %>
  <%= book.title %>
  <% end %></th>
  <th><%= book.body %></th>
 <% end %>
</tr>
</tbody>
</table>

   </div>
 </div>
 </div>
